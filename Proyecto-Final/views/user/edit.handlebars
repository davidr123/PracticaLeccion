<h2>Editar - <a href="/user">Estudiante</a></h2>

<!-- NOTA: utilice helper para simplificar el código de esta sección 
agregar method-override 
-->

<form class="form" action="/user/{{user.id_administrador}}?_method=PUT" method="post">
  <div class="form-group">
    <label for="title"></label>
    <input type="text" class="form-control" id="usuario" name="usuario"  value="{{user.usuario}}"> 
    <input type="password" class="form-control" id="password" name="password"  value="{{user.password}}">
    <input type="text" class="form-control" id="rol" name="rol"  value="{{user.rol}}">
    
    </div>
  <button type="submit" class="btn btn-default btn-danger">Update</button>
</form>

